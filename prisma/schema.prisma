generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String    @unique  // Username for login
  nickname      String    @default("") 
  password      String?
  role          String    @default("USER") // "USER" | "ADMIN"
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  books         Book[]    @relation("UserUploadedBooks")
  posts         Post[]
  comments      Comment[]
  likes         Like[]
  bookAccess    UserBookAccess[]
}

model Book {
  id             String    @id @default(cuid())
  title          String
  author         String?
  description    String?
  coverUrl       String?
  fileUrl        String
  fileSize       Int?      // File size in bytes for duplicate detection
  originalFileName String? // Original filename without timestamp
  uploaderId     String
  uploader       User      @relation("UserUploadedBooks", fields: [uploaderId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  posts          Post[]
  userAccess     UserBookAccess[]
}

model UserBookAccess {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookId     String
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  accessedAt DateTime @default(now())

  @@unique([userId, bookId])
}

model Post {
  id        String    @id @default(cuid())
  content   String
  authorId  String
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  bookId    String?
  book      Book?     @relation(fields: [bookId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  comments  Comment[]
  likes     Like[]
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Like {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}
